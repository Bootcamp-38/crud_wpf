<Window x:Class="crud_wpf.change_password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crud_wpf"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Change Password" Height="500" Width="350">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="314" Margin="50,69,0,0" VerticalAlignment="Top" Width="252">
            <PasswordBox Margin="0,29,0,227" x:Name="tb_old" materialDesign:HintAssist.Hint="Old Password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" FontFamily="Champagne &amp; Limousines" FontSize="18"/>
            <PasswordBox Margin="0,112,0,144" x:Name="tb_new" materialDesign:HintAssist.Hint="New Password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" FontFamily="Champagne &amp; Limousines" FontSize="18"/>
            <Button Content="OK" Margin="86,236,91,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        </Grid>
    </Grid>
</Window>
